@{
    ViewBag.Title = "Upload XML";
}

<h2>Upload XML entities</h2>

<p>This will only insert new measurements, old elements are ignored.</p>

@using (Html.BeginForm("UploadXML", "Temperatures", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <input type="file" name="file" />
                <input type="submit" value="Upload" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

